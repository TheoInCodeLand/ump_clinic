<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Staff Dashboard</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    /* Custom CSS for additional styling */
    .sidebar-link {
      transition: all 0.3s ease;
    }
    .sidebar-link:hover {
      transform: translateX(5px);
    }
    .notification {
      animation: slideIn 0.5s ease-out;
    }
    @keyframes slideIn {
      from { transform: translateY(-20px); opacity: 0; }
      to { transform: translateY(0); opacity: 1; }
    }
  </style>
</head>
<body class="bg-gray-50 font-sans antialiased text-gray-900">
  <div class="flex h-screen">
    <!-- Sidebar -->
    <aside class="w-64 bg-white shadow-lg border-r border-gray-200">
      <div class="p-6 border-b border-gray-200">
        <h1 class="text-2xl font-bold text-gray-900">Staff Dashboard</h1>
      </div>
      <nav class="mt-6">
        <a href="/staff/manage_appointments" class="sidebar-link block px-6 py-3 text-gray-700 font-medium hover:bg-blue-50 hover:text-blue-700 transition">Manage Appointments</a>
        <a href="/staff/manage_records" class="sidebar-link block px-6 py-3 text-gray-700 font-medium hover:bg-blue-50 hover:text-blue-700 transition">Manage Records</a>
        <a href="/staff/manage_students" class="sidebar-link block px-6 py-3 text-gray-700 font-medium hover:bg-blue-50 hover:text-blue-700 transition">Manage Students</a>
        <a href="/auth/logout" class="sidebar-link block px-6 py-3 text-gray-700 font-medium hover:bg-red-50 hover:text-red-700 transition">Logout</a>
      </nav>
    </aside>

    <!-- Main Content -->
    <main class="flex-1 p-8 overflow-auto bg-gray-100">
      <!-- Notifications -->
      <% if (success) { %>
        <div id="success-notification" class="notification mb-6 p-4 bg-green-100 text-green-800 rounded-lg shadow-md flex justify-between items-center">
          <span><%= success %></span>
          <button onclick="dismissNotification('success-notification')" class="text-green-600 hover:text-green-800">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
          </button>
        </div>
      <% } %>
      <% if (error) { %>
        <div id="error-notification" class="notification mb-6 p-4 bg-red-100 text-red-800 rounded-lg shadow-md flex justify-between items-center">
          <span><%= error %></span>
          <button onclick="dismissNotification('error-notification')" class="text-red-600 hover:text-red-800">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
          </button>
        </div>
      <% } %>

      <!-- Pending Appointments -->
      <div class="bg-white p-6 rounded-lg shadow-md">
        <h2 class="text-xl font-bold text-gray-900 mb-4">Pending Appointments</h2>
        <ul class="space-y-3">
          <% appointments.forEach(appointment => { %>
            <li class="p-4 bg-gray-50 rounded-md hover:bg-gray-200 transition flex justify-between items-center">
              <div>
                <span class="font-medium text-gray-800"><%= appointment.date %> at <%= appointment.time %></span>
                <span class="text-gray-600"> - <%= appointment.name %> <%= appointment.surname %>: <%= appointment.reason %></span>
              </div>
              <button class="text-blue-600 hover:text-blue-800 font-medium">View Details</button>
            </li>
          <% }) %>
        </ul>
      </div>
    </main>
  </div>

  <script>
    // JavaScript for dismissing notifications
    function dismissNotification(id) {
      const element = document.getElementById(id);
      if (element) {
        element.style.transition = 'opacity 0.3s ease';
        element.style.opacity = '0';
        setTimeout(() => {
          element.remove();
        }, 300);
      }
    }
  </script>
</body>
</html>