<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Manage Student Records</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <header>
    <h1>Manage Student Records</h1>
    <nav>
      <a href="/staff/dashboard">Dashboard</a>
      <a href="/staff/manage_appointments">Manage Appointments</a>
      <a href="/staff/manage_students">Manage Students</a>
      <a href="/auth/logout">Logout</a>
    </nav>
  </header>
  <main>
    <% if (success) { %>
      <p class="success"><%= success %></p>
    <% } %>
    <% if (error) { %>
      <p class="error"><%= error %></p>
    <% } %>
    <% students.forEach(student => { %>
      <div>
        <h3>
          <%= student.name %> <%= student.surname %>
          <a href="/staff/manage_records/<%= student.id %>/profile">View Profile</a>
        </h3>
        <form action="/staff/manage_records/<%= student.id %>/visit" method="POST">
          <label for="date_<%= student.id %>">Visit Date:</label>
          <input type="date" id="date_<%= student.id %>" name="date" required>
          <label for="diagnosis_<%= student.id %>">Diagnosis:</label>
          <input type="text" id="diagnosis_<%= student.id %>" name="diagnosis" required placeholder="e.g., Influenza">
          <label for="notes_<%= student.id %>">Notes:</label>
          <textarea id="notes_<%= student.id %>" name="notes" placeholder="e.g., Patient reports fever for 3 days"></textarea>
          <label for="medication_<%= student.id %>">Medication:</label>
          <input type="text" id="medication_<%= student.id %>" name="medication" placeholder="e.g., Amoxicillin">
          <label for="dosage_<%= student.id %>">Dosage:</label>
          <input type="text" id="dosage_<%= student.id %>" name="dosage" placeholder="e.g., 500mg twice daily">
          <label for="duration_<%= student.id %>">Duration (days):</label>
          <input type="number" id="duration_<%= student.id %>" name="duration" min="1" placeholder="e.g., 7">
          <label for="instructions_<%= student.id %>">Instructions:</label>
          <textarea id="instructions_<%= student.id %>" name="instructions" placeholder="e.g., Take with food"></textarea>
          <button type="submit">Add Visit</button>
        </form>
      </div>
    <% }) %>
  </main>
</body>
</html>